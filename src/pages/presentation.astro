---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
import { marked } from 'marked'; 

const presentationPage = await getEntry('pages', 'presentation');
const { title, historyTitle, historyText, valuesTitle, value1Title, value1Text, value2Title, value2Text, value3Title, value3Text } = presentationPage.data;
const historyHtml = marked.parse(historyText || "");
---

<Layout title="Présentation de l'école">
  <!-- Hero Section -->
  <div class="relative h-64 md:h-96 overflow-hidden bg-slate-900">
    <img 
        src="https://images.unsplash.com/photo-1523050854058-8df90110c9f1?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" 
        alt="L'école des Tilleuls" 
        class="w-full h-full object-cover opacity-60"
    />
    <div class="absolute inset-0 flex items-center justify-center">
        <h1 class="text-3xl md:text-5xl font-bold text-white tracking-tight drop-shadow-md text-center px-4">
            {title}
        </h1>
    </div>
  </div>

  <div class="bg-white py-16 md:py-24">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
      
      <!-- Intro / History -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center mb-24">
        <div class="prose prose-lg prose-slate" set:html={historyHtml}>
        </div>
        <div class="relative rounded-2xl overflow-hidden shadow-xl rotate-1 hover:rotate-0 transition-transform duration-500">
            <img 
                src="https://images.unsplash.com/photo-1588072432836-e10032774350?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" 
                alt="Architecture de l'école" 
                class="w-full h-full object-cover"
            />
        </div>
      </div>

      <!-- Values Grid -->
      <div class="mb-24">
        <div class="text-center mb-12">
            <h2 class="text-3xl font-bold text-slate-900">{valuesTitle}</h2>
            <div class="w-24 h-1 bg-amber-500 mx-auto mt-4 rounded-full"></div>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <!-- Value 1 -->
            <div class="bg-slate-50 p-8 rounded-xl border border-slate-100 text-center hover:shadow-md transition-shadow">
                <div class="w-14 h-14 bg-white rounded-full flex items-center justify-center text-amber-500 mx-auto mb-6 shadow-sm border border-slate-100">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">{value1Title}</h3>
                <p class="text-slate-600">
                    {value1Text}
                </p>
            </div>
            
            <!-- Value 2 -->
            <div class="bg-slate-50 p-8 rounded-xl border border-slate-100 text-center hover:shadow-md transition-shadow">
                <div class="w-14 h-14 bg-white rounded-full flex items-center justify-center text-amber-500 mx-auto mb-6 shadow-sm border border-slate-100">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">{value2Title}</h3>
                <p class="text-slate-600">
                   {value2Text}
                </p>
            </div>

            <!-- Value 3 -->
            <div class="bg-slate-50 p-8 rounded-xl border border-slate-100 text-center hover:shadow-md transition-shadow">
                <div class="w-14 h-14 bg-white rounded-full flex items-center justify-center text-amber-500 mx-auto mb-6 shadow-sm border border-slate-100">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>
                </div>
                <h3 class="text-xl font-bold text-slate-900 mb-3">{value3Title}</h3>
                <p class="text-slate-600">
                    {value3Text}
                </p>
            </div>
        </div>
      </div>

      <!-- Environment / Image Break -->
      <div class="bg-slate-900 rounded-3xl overflow-hidden relative isolate">
        <img 
            src="https://images.unsplash.com/photo-1577896334614-501cf134fa8e?ixlib=rb-4.0.3&auto=format&fit=crop&w=2000&q=80" 
            alt="Cour de récréation" 
            class="absolute inset-0 -z-10 h-full w-full object-cover mix-blend-overlay opacity-40"
        />
        <div class="p-12 md:p-20 text-center">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Un cadre de vie exceptionnel</h2>
            <p class="text-slate-200 text-lg max-w-2xl mx-auto leading-relaxed mb-8">
                Des salles de classe lumineuses, une bibliothèque richement dotée, une salle informatique moderne et une cour de récréation arborée.
            </p>
            <a href="/contact" class="inline-block px-8 py-3 bg-white text-slate-900 font-semibold rounded-full hover:bg-amber-500 hover:text-white transition-colors duration-300">
                Venir nous visiter
            </a>
        </div>
      </div>

    </div>
  </div>
</Layout>
