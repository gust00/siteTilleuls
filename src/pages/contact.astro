  {
    name: "Mme Sophie Martin",
    role: "Directrice",
    email: "direction@ecoledestilleuls.fr",
    image: "https://images.unsplash.com/photo-1544005313-94ddf0286df2?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" // Placeholder
  },
  {
    name: "M. Pierre Durand",
    role: "Enseignant CM2",
    email: "pierre.durand@ecoledestilleuls.fr",
    image: "https://images.unsplash.com/photo-1506794778202-cad84cf45f1d?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" // Placeholder
  },
  {
