---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.astro";
import { getEntry } from "astro:content";

const homePage = await getEntry("pages", "home");
const {
    carouselImages,
    heroTitle,
    heroSubtitle,
    ctaText1,
    ctaLink1,
    ctaText2,
    ctaLink2,
    sectionTitle,
    sectionText,
} = homePage.data;
---

<Layout title="Accueil">
    <!-- Hero Section / Carousel -->
    <section
        class="relative h-[80vh] flex items-center justify-center overflow-hidden bg-slate-900"
    >
        <!-- Carousel Component -->
        <Carousel images={carouselImages || []} />

        <!-- Content Overlay -->
        <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
            <h1
                class="text-4xl md:text-6xl font-bold text-white mb-6 drop-shadow-lg tracking-tight"
            >
                {heroTitle}
            </h1>
            <p
                class="text-xl text-slate-100 mb-8 font-light max-w-2xl mx-auto drop-shadow-md"
            >
                Une école au service des parents
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a
                    href={ctaLink1}
                    class="px-8 py-3 bg-white text-slate-900 font-semibold rounded-full hover:bg-slate-100 transition shadow-lg transform hover:-translate-y-1"
                >
                    {ctaText1}
                </a>
                <a
                    href={ctaLink2}
                    class="px-8 py-3 bg-transparent border-2 border-white text-white font-semibold rounded-full hover:bg-white/10 transition shadow-lg"
                >
                    {ctaText2}
                </a>
            </div>
        </div>
    </section>

    <!-- Generic Section Placeholder -->
    <section class="py-20 bg-white">
        <div class="container mx-auto px-4">
            <div class="text-center max-w-3xl mx-auto">
                <h2 class="text-3xl font-bold text-slate-800 mb-6">
                    Une pédagogie centrée sur l'éducation intégrale
                </h2>
            </div>
        </div>
    </section>
</Layout>
